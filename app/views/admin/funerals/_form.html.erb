<%= form_with model: [:admin, @funeral] local: true do |f| %>
  <%= f.label "開始" %>
    <%= @funeral.start_time.strftime("%H:%M") %>
  <%= f.hidden_field :start_time, :value => @funeral.start_time %>
    <%= f.label "終了目安" %>
  <%= f.hidden_field :end_time, :value => @funeral.end_time %>
    <%= @funeral.end_time.strftime("%H:%M") %>
    <% id = Funeral.last.id.to_i %>
    <% id += 1 %>
  <%= f.hidden_field :id, :value => id %>

  <% @users.each do |user|%>
    <%= f.fields_for :working_hours, @funeral.working_hours.build do |working_hour| %>
      <%= working_hour.label "検索結果" %>
      <% shift = Shift.find_by(user_id: user.id) %>
      <%= working_hour.check_box :shift_id, {multiple: true}, shift.id, nil %>
      <%= user.name %>
    <% end %>
  <% end %>

  <%= f.label "会場" %>
  <%= f.collection_select :funeral_halls_id, FuneralHall.all, :id, :name %>
  <%= f.label "取引先" %>

  <%= f.collection_select :client_id, Client.all, :id, :name %>

  <%= f.submit %>
<% end %>
